pipeline {
    
    agent any

    tools {
        go '1.17'
    }

    environment {
		DOCKERHUB_CREDENTIALS=credentials('git')
        PATH = "$PATH:/usr/local/bin"
	}
    
    stages {

        stage ("clone") {
            steps {
                git branch: 'Admin_Service', url: "https://github.com/swiggy-2022-bootcamp/cdp-team3.git"
            }
        }

        stage("build") {

            steps {
                echo 'building the application...'
                sh 'ls'
                sh script:'''
                    #!/bin/bash
                    cd ./admin-service
                    pwd
                    go mod tidy
                    go build .
                '''
            }
        }

        stage("test") {

            steps {
                echo 'testing the application...'
                sh script:'''
                    pwd
                    cd ./admin-service
                    go test -v ./...
                '''
            }
        }

        stage("image build") {

			steps {
                echo 'building the docker image...'
				sh script:'''
                    pwd
                    cd ./admin-service
                    docker build -t immadiuttej/admin-service:latest .
                '''
			}
		}

        stage("docker login") {

			steps {
                echo 'loging into docker...'
                sh 'docker --version'
				sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
			}
		}

        stage("push image to dockerhub") {

            steps {
                sh 'docker --version'
                echo 'pushing the image to docker hub...'
                sh 'docker push immadiuttej/admin-service:latest'
            }
        }
    }

    post {
		always {
		    sh 'docker logout'
		}
	}
}
